<% 
  let page = pageType 
  let showFullFooter = page !== "error"? true : false
%>


<%- include('./partials/head', { page: page } ) -%>

<body <% if (page === "error") { %>class="error"<% } %>>
  <% useZoomTransition = (page === "home" || page === "about") ? true : false %>
  <%- include('./partials/loader', { zoomIn: useZoomTransition } ) -%>
  <%- include('./partials/navigation-bar') -%>
  <% if (page !== "error") { %><%- include('./partials/navigation-menu') -%><% } %>
  <main id="main" data-page="<%- page %>" <% if(page === "playlists") { %>data-page-view-type="<%- pageViewType %>" <%} %> class="main <% if (page !== "error") { %><%- page %><% } %> relative">
    <div>
      <div 
        <% if (page !== "home" && page !== "about" && page !== "gallery" && page !== "error") { %>
          class="<% if (page === "playlists") { %>min-height no-overflow <% if (pageViewType === "grid") { %>hero--l-p-t<% } else if (pageViewType === "detail") { %>hero--s-p-t<% } %>
            <% } else { %>
              hero--p-t
            <% } %>
          "
        <% } %>
        data-inner-content>
        <% switch(page) {
          case 'about' : %>
            <%- include('./pages/about') %>
            <%  break; %>
          <% case 'gallery' : %>
            <%- include('./pages/gallery', { document }) %>
            <%  break; %>
          <% case 'contact' : %>
            <%- include('./pages/contact') %>
            <%  break; %>
          <% case 'documents' : %>
            <%- include('./pages/documents') %>
            <%  break; %>
          <% case 'team_members' : %>
            <%- include('./pages/team-member') %>
            <%  break; %>
          <% case 'playlists': %>
            <%- include('./pages/playlists', { spotifyPlaylists, spotifyTracks, pageViewType, document }) %>
          <%  break; %>
          <% case 'error' : %>
            <%- include('./pages/error') -%>
            <% break; %>
          <% default : %>
          <%- include('./pages/home') -%>
        <% } %>
      </div>
      
      <%- include('./partials/footer', { showFull: showFullFooter } ) -%>
    </div>
  </main>

  <%- include('./partials/page-transition') -%>
  <script src="/main.js"></script>
</body>


