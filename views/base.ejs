<% 
  let page = pageType 
  let showFullFooter = page !== "error"? true : false
%>


<%- include('./partials/head', { page: page } ) -%>

<body <% if (page === "error") { %>class="error"<% } %>>
  <% useZoomTransition = (page === "home") ? true : false %>
  <%- include('./partials/loader', { zoomIn: useZoomTransition } ) -%>
  <%- include('./partials/navigation-bar') -%>
  <main id="main" data-page="<%- page %>" class="main <% if (page !== "error") { %><%- page %><% } %> relative">
    <% if (page !== "error") { %><%- include('./partials/navigation-menu') -%><% } %>
    <div>
      <div <% if (page === "contact" || page === "team_members") { %>class="hero--p-t"<% } %>>
        <% switch(page) {
          case 'about' : %>
            <%- include('./pages/about') %>
            <%  break; %>
          <% case 'contact' : %>
            <%- include('./pages/contact') %>
            <%  break; %>
          <% case 'team_members' : %>
            <%- include('./pages/team-member') %>
            <%  break; %>
          <% case 'error' : %>
            <%- include('./pages/error') -%>
            <% break; %>
          <% default : %>
          <%- include('./pages/home') -%>
        <% } %>
      </div>
      
      <%- include('./partials/footer', { showFull: showFullFooter } ) -%>
    </div>
    
    
  </main>
  
  <script src="/main.js"></script>
</body>


