<section class="hero">
  <div class="relative flex section--m-p-b">
    <div class="hero__bg overlay" style="background-image: url('<%- document.data.hero_image.url %>')"></div>
    <div class="hero__g-overlay overlay"></div>
    <div class="container grid--all h-hero__grid">
      <div class="h-hero__intro">
        <span class="type--xs type--caps type--bold type--white type--display">
          <%- siteDetails.data.brand_description %>
        </span>
      </div>
      <div class="h-hero__alt">
        <span class="inline-block type--display type--m type--white">
          <%- document.data.alt_text %>
        </span>
      </div>
      <div class="h-hero__title text-right">
        <h1 class="type--xl type--display type--caps type--x-bold type--outline-white" data-title>
          <span class="no-wrap"><span class="no-overflow"><span class="inline-block" data-char>T</span><span class="inline-block" data-char>h</span><span class="inline-block" data-char>i</span><span class="inline-block" data-char>s&nbsp;</span></span><span class="no-overflow"><span class="inline-block" data-char>I</span><span class="inline-block" data-char>s</span></span></span><span class="no-wrap--and-break no-overflow"><span class="inline-block" data-char>R</span><span class="inline-block" data-char>o</span><span class="inline-block" data-char>o</span><span class="inline-block" data-char>m</span></span>
          <span class="no-wrap--and-break no-overflow"><span class="inline-block" data-char>1</span><span class="inline-block" data-char>8</span><span class="inline-block" data-char>7</span></span>
        </h1>      
      </div>

      <div class="play--button thumbnail h-hero__play" data-play>
        <%- include('../partials/play-button') -%>
      </div>

      <div class="h-hero__cta button--m-t">
        <a href="<%- siteDetails.data.main_cta_link.url %>" class="button button--l button--primary block--full-width">
          <%- siteDetails.data.main_cta_text %>
        </a>
      </div>
      
    </div>
  </div>
  
</section>
<div class="scroll-over section--l-p-t bg--black">
  <%- include('../SliceZone.ejs', { SliceZone: document.data.body, testimonials: testimonials }) %>
  <%- include('../partials/stats') -%>
  <%- include('../partials/cta-block') -%>
  <%- include('../partials/footer') -%>
</div>
